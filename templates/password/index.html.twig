{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block content %}
    <div class="container">
        <h1>Modifier le mot de passe</h1>

        {{ form_start(changePasswordForm) }}

        <div class="form-group">
            {{ form_row(changePasswordForm.plainPassword) }}
        </div>

        <div class="form-group">
            {{ form_row(changePasswordForm.confirmPassword) }}
        </div>
        {# Affichage des messages flash si pr√©sents #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary">Enregistrer le nouveau mot de passe</button>

        {{ form_end(changePasswordForm) }}

    </div>
{% endblock %}