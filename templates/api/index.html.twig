{% extends 'base.html.twig' %}

{% block title %}VELIKO{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css" />

    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
{% endblock %}

{% block content %}

    <div id="map"></div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
    <script>
        function initMap() {
            console.log('Initializing map...');

            //Initialisation Paris
            var map = L.map('map').setView([48.8566, 2.3522], 12);

            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                attribution: 'Données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 1,
                maxZoom: 20
            }).addTo(map);

            // Initialisation on user geolocation
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    var userLat = position.coords.latitude;
                    var userLon = position.coords.longitude;

                    map.setView([userLat, userLon], 14);

                    L.marker([userLat, userLon]).addTo(map)
                        .bindPopup("Vous êtes ici").openPopup();
                }, function(error) {
                    console.error('Geolocation error: ' + error.message);
                });
            } else {
                console.error("Geolocation is not supported by this browser.");
            }


            var markers = L.markerClusterGroup();

            var stations = {{ stations|json_encode()|raw }};
            var statuses = {{ statuses|json_encode()|raw }};

            stations.forEach(function(station) {
                var status = statuses[station.station_id] || {};
                var mechanicalBikes = status.num_bikes_available_types?.[0]?.mechanical || 0;
                var electricBikes = status.num_bikes_available_types?.[1]?.ebike || 0;

                var marker = L.marker([station.lat, station.lon])
                    .bindPopup(
                        "Nom : " + station.name +
                        "<br>Capacité : " + station.capacity +
                        "<br>Vélos mécaniques disponibles : " + mechanicalBikes +
                        "<br>Vélos électriques disponibles : " + electricBikes
                    );

                // survol Station
                marker.on('mouseover', function() {
                    marker.bindPopup(
                        "Nom : " + station.name +
                        "<br>Capacité : " + station.capacity +
                        "<br>Vélos mécaniques disponibles : " + mechanicalBikes +
                        "<br>Vélos électriques disponibles : " + electricBikes
                    ).openPopup();
                });

                // fin survol
                marker.on('mouseout', function() {
                    marker.closePopup();
                });

                markers.addLayer(marker);
            });

            // Ajouter le groupe à la carte
            map.addLayer(markers);
        }

        window.onload = initMap;
    </script>
{% endblock %}
